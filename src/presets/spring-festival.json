    "3xl": "64px"
  },

  "typography": {
    "fontFamily": {
      "sans": ["PingFang SC", "Microsoft YaHei", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "Arial", "sans-serif"],
      "mono": ["Monaco", "Menlo", "Consolas", "Courier New", "monospace"]
